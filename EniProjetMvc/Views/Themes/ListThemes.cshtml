@using BO
@using EniProjetMvc.Extensions
@model IEnumerable<BO.Theme>
@{
    ViewBag.Title = "ListOrganizer";
    string firstImageLink = "";
}

<div id="ListTheme">
    <div class="row">
        @foreach (var item in Model)
        {
            var color = item.Desactive ? "yellow" : "green";
            var textBtn = item.Desactive ? "Activer" : "Désactiver";
            var description = item.Description ?? "Aucune description";

            <div class="col-lg-3">
              
                    <div class="info-box">
                        <span class="info-box-icon bg-@color">
                            <span class="info-box-text">@item.Libelle</span>
                            
                        </span>

                        <div class="info-box-content">
                            <span class="info-box-text">@description</span>
                            <button class="btn btn-default btn-sm btn-theme" data-id="@item.Id">@textBtn</button>
                        </div>
                    </div>
                
               
            </div>

                    }

        @if (Model.Count() == 0)
        {
            <div class="alert alert-warning">Aucun théme à afficher</div>
        }
    </div>


</div>
